<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bg_of_month"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/ic_circle_01_24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/day_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="01"
                android:textSize="14sp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/month_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JAN"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp">

        <TextView
            android:id="@+id/name_schedulee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Makan"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/year_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="2017"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="05:00 PM"
        android:textSize="18sp"
        android:textColor="#000000" />

</LinearLayout>